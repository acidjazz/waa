.ani-slide-in-left
  animation slide-in-left 0.2s ease 0s both
  &.is-closing
    animation-delay 0s !important
    animation slide-out-left 0.2s ease 0s both

.ani-slide-in-right
  animation slide-in-right 0.2s ease 0s both
  &.is-closing
    animation-delay 0s !important
    animation slide-out-right 0.2s ease 0s both

.ani-slide-in-top
  animation slide-in-top 0.2s ease 0s both
.ani-slide-in-bottom
  animation slide-in-bottom 0.2s ease 0s both

.ani-fade-in
  animation fade-in 0.2s ease 0s both
.ani-fade-out
  animation fade-out 0.6s ease 0s both

.ani-zoom-in
  animation zoom-in 0.2s ease 0s both
.ani-zoom-out
  animation zoom-out 0.6s ease 0s both

.ani-slide-in-left, .ani-slide-in-top, .ani-slide-in-right, .ani-zoom-in, .ani-fade-in, .ani-slide-in-top, .ani-slide-in-bottom
  for i in 1..20
    &.ani-delay-{i}
      animation-delay unit(0.05 * i, 's')
