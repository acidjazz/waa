@media all and (min-width: 1px) and (max-width: 1000px)
  .page.page_init > .page_content
    padding 0
    > .section
      &.section_top
        height auto
        min-height 100vh
        overflow hidden
        > .inner
          > .paper
            width 311px
            height 393px
            background-size contain
            margin 0 0 0 -182px
            display none
          > .vase
            right -100px
            margin-top -100px
            display none
          > .copys
            margin 60px 0 0 0
            position absolute
            width 100%
            height auto
            height auto
            max-width 300px
            > .cta
              margin 20px 0 0 0
            top 20px
            left 20px
      &.section_about
        margin 30px auto
        width auto
        > .logos
          padding 30px 0
          width auto
          > a
            display block
        > .copy:nth-child(3)
          line-height 30px
          width auto
          font h3
          padding 0 20px 30px 20px
      &.section_about, &.section_sources > .inner
        > .copys
          column-count 1
          column-gap 0px
          > .block
            padding 20px
      &.section_sources
         > .inner
           width auto

