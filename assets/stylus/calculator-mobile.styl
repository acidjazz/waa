@media all and (min-width: 1px) and (max-width: 1000px)
  .fade
    height 1880px
  .page.page_calc
    > .page_content
      margin 90px 0 0 0
      padding 60px 0
      > .inner
        width auto
        padding 60px 0
  .calculator
    width auto
    > .header
      margin 0 10px
      height 180px
      > .icon
        padding 67px 50px
    > .params
      > .param
        padding 10px 0
        > .label
          float none
          width auto
          height auto
          text-align left
          margin 0 0 0 20px
        > .copy
          padding 0
        > .options
          margin auto
          text-align center
          > .input
            display inline-block
            > input
              margin 0
              display inline-block
          > .pulldowns
            > .pulldown
              > .pullarea
                > .select
                  > select
                    width 94vw
                    > option
                      width 300px
  .calculated
    z-index 30
    top 0
    left 0
    right 0
    margin-left 0px
    width auto
    border-radius 0px
    padding  0 20px
    > .inner
      > .pdf
        display none
      > .close
        top 20px
        right 0
      > .data
        padding 30px 0
        margin 30px 0
        > .inner
          width auto
          > .copy.copy_body
            width auto
            padding 0
          > .stat
            width auto



