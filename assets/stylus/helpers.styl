.bg-bigstone
  background-color bigstone
.text-bigstone
  color bigstone

.bg-robins-egg
  background-color robins-egg
.text-robins-egg
  color robins-egg

.bg-mischka
  background-color mischka
.text-mischka
  color mischka

.bg-lined
  @apply bg-bigstone
  background repeating-linear-gradient(
    -45deg,
    shark,
    shark 4px,
    bastille 4px,
    bastille 8px)

.bg-tranblue
  background linear-gradient(-67deg, rgba(#0099ff, 0.7), rgba(#00cccc, 0.7))

.w-fullbleed
  width calc(100vw + 1rem)
.h-fullbleed
  height calc(100vh + 1rem)

.scale-30
  transform scale(30)
  transition transform 0.5s ease-in-out 0s

.scale-1
  transform scale(1)
  transition transform 0.3s ease-in-out 0s

.tran-size-delay
  transition width 0s linear 0.6s, height 0s linear 0.6s

.tran-colors
  transition background 0.5s ease-in-out 0s, color 0.5s ease-in-out 0s

// cubic-bezier(.87,-0.41,.19,1.44)

.top-50
  top 50%
.left-50
  left 50%

.transform-50
  transform translate(-50%, -50%)

.waa-button
  cursor pointer
  @apply px-6 py-3 text-white rounded-full border border-white
  transition background-color 0.5s ease 0s, transform 0.2s ease 0s
  &:hover, &:hover.in-viewport
    @apply bg-white text-black
    transform scale(1.05)
