.w-fullbleed
  width calc(100vw + 1rem)
.h-fullbleed
  height calc(100vh + 1rem)

.h-screen-bl48
  height calc(100vh + 12rem)

.scale-30
  transform scale(30)
  transition transform 0.5s ease-in-out 0s

.scale-1
  transform scale(1)
  transition transform 0.3s ease-in-out 0s

.tran-size-delay
  transition width 0s linear 0.6s, height 0s linear 0.6s

.tran-colors
  transition background 0.5s ease-in-out 0s, color 0.5s ease-in-out 0s

.tran-width
  transition width 1s linear
.tran-all-1s
  transition all 1s linear
.tran-all-p2s
  transition all .2s  ease

.tran-text-4s
  transition text 4s ease

// cubic-bezier(.87,-0.41,.19,1.44)

.top-50
  top 50%
.left-50
  left 50%

.transform-50
  transform translate(-50%, -50%)

.waa-button
  cursor pointer
  @apply inline-block px-12 py-3 text-white rounded-full border border-white hover-tran-bg
  &:hover
    @apply bg-black
    transform scale(1.05)

.waa-button-black
  @apply cursor-pointer inline-block px-12 py-3 text-black rounded-full border border-black hover-tran-bg
  &:hover
    @apply bg-black text-white

.waa-button-black-small
  @apply waa-button-black px-8 py-2
  &:hover
    @apply bg-black text-white

.waa-button-readonly
  @apply border border-seashell inline-block px-12 py-3 text-alum rounded-full cursor-not-allowed

.hover-tran-bg
  transition background-color 0.5s ease 0s

.canister
  max-width 1024px
  @apply mx-auto
  @media print
    max-width 100%

.text-bolder
  @apply font-okib

.carat
  @apply w-4 h-4
  transform rotate(45deg)

.mt-36px
  @media (min-width: 1024px)
    margin-top 26px
  margin-top -25px

.-mt-22px
  margin-top -26px
  @media (min-width: 1024px)
    margin-top -22px

.data-val
  @apply text-trueblue text-bolder inline px-1

.filter-gray
  opacity 0.3
