json('../../assets/colors.json')
json('../../assets/fonts.json')
@import '../../assets/stylus/mixins.styl'

.page.page_vision > .page_content
  padding 0 0 60px 0
  > .section
    > .inner
      padding 60px 0
      margin auto
    &.section_top
      position relative
      width 100%
      height 100vh
      background-image url(/vision-banner.jpg)
      > .outer
        background-image linear-gradient(157deg, rgba(purple, 0.8), rgba(blue, 0.8) 83%)
        position absolute
        width 100%
        height 100vh
      > .inner
        position absolute
        width 760px
        height 280px
        margin-top -140px
        margin-left -380px
        top 50%
        left 50%
        text-align center
        color white
        > .title
          font c1
          inViewport(0.1)
        > .copy
          font h2b
          line-height 50px
          inViewport(0.2)
        > .cta
          display inline-block
          margin-top 40px
          border 1px solid white
          border-radius 3px
          color white
          text-decoration none
          padding 10px 40px
          inViewport(0.3)
          background-color rgba(white, 0.1)


    &.section_together
      > .inner
        width 900px
        margin auto

        > .top-block
          background-color lightgrey
          padding 60px 30px
          width 600px
          position relative
          inViewport(0)
          > #Share
            margin 0 0 0 260px
          > .title
            font h6
          > .copy
            font c1
            color grey
            padding 20px 0
          > .line
            position absolute
            background-color black
            width 4px
            height 80px
            bottom -40px
            left 60px

        > .image-text-block-1
          padding 90px 0
          > .image
            float left
            width 660px
            inViewport(0)
            > img
              width inherit
          > .text
            float right
            inViewport(0.1)
            width 180px
            margin-left 60px
            > .title
              font h6
              margin 90px 0 30px 0
            > .copy
              color grey
              font c1

        > .image-text-block-2
          padding 90px 0
          > .image
            inViewport(0.1)
            float right
            width 360px
            > img
              width inherit
          > .text
            inViewport(0)
            float left
            width 220px
            margin-left 160px
            > .title
              font h6
              margin 60px 0 30px 0
            > .copy
              color grey
              font c1

        > .bottom-block
          inViewport(0)
          padding 60px 90px
          width 600px
          background-image linear-gradient(157deg, #f6b57c, #ec6999 83%)
          border-radius 3px
          margin auto
          position relative
          > .copy
            float left
            width 400px
            color white
          > a.cta
            float right
            padding 10px 30px
            background-color white
            border-radius 3px
            text-decoration none
            color black
            font c1b
            margin-top 30px
          > .line
            position absolute
            background-color black
            width 4px
            height 80px
            top -40px
            right 180px

    &.section_stakes
      > .inner
        width 700px
        text-align center
        > .copy:nth-child(1)
          font h1
          padding 0 0 30px 0
          inViewport(0)
        > .copy:nth-child(2)
          color grey
          width 500px
          margin auto
          inViewport(0.1)
    &.section_chart
      overflow hidden
      &.section_chart_incomeafford
        height 470px
        > .inner > .copy_legend > .copy:nth-child(2)
          padding 50px 0
      &.section_chart_buildmore
        > .inner > .copy_legend > .copy:nth-child(2)
          padding 30px 0 40px 0
      &.section_chart_metros
        height 560px
      > .inner
        margin auto
        width 1100px
        > .copy_legend
          float left
          width 300px
          > .copy:nth-child(1)
            font h2
            inViewport(0.1)
          > .copy:nth-child(2)
            color grey
            padding 20px 0
            inViewport(0.2)
          > .legend
            inViewport(0.3)
            > .row
              margin 0 0 10px 0
              > .color
                float left
                width 10px
                height 10px
                border-radius 50%
                margin 5px 0 0 0
                &.color_grey
                  background-color grey
                &.color_tomato
                  background-color tomato
                &.color_blue
                  background-color blue
                &.color_darkblue
                  background-color darkblue
                &.color_purple
                  background-color purple
                &.color_yellow
                  background-color yellow
                &.color_green
                  background-color green
              > .copy
                margin 0 0 0 20px
                font c1sb
                text-transform uppercase
        > .chart_area
          float right
          margin 0 0 0 60px
          width 740px

