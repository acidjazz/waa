json('../../assets/colors.json')
json('../../assets/fonts.json')

.page.page_init > .page_content
  padding 0
  > .section
    &.section_top
      height 100vh
      width 100%
      background linear-gradient(100deg, #a2cdcf, #6991a9)
      position relative
      > .inner
        > .vase
          position absolute
          top 50%
          right 0
          margin-top -304px
          width 310px
          height 609px
          background-image url(/about-vase.png)
        > .paper
          position absolute
          width 623px
          height 786px
          top 50%
          left 50%
          margin-top -393px
          margin-left -211px
          background-image url(/about-paper.png)
        > .copys
          position absolute
          width 260px
          height 396px
          top 50%
          left 50%
          margin-top -196px
          margin-left -430px
          > .copy:nth-child(1)
            font h2
            width 200px
          > .copy:nth-child(2)
            font c1sb
            text-transform uppercase
            padding 20px 0
          > .cta
            margin 60px 0 0 0
            padding 10px 20px
            background-color white
            color blue
            text-decoration none
            border-radius 3px
            text-transform uppercase
            font c1sb
            float left
            transition background-color 0.5s ease 0s, transform 0.2s ease 0s
            &:hover
              transform scale(1.05)
    &.section_about
      margin 60px auto
      width 900px
      > .copy:nth-child(1)
        text-transform uppercase
        color grey
        text-align center
      > .logos
        padding 60px 0
        width 410px
        margin auto
        text-align center
        > a > img
          height 60px
      > .copy:nth-child(3)
        text-align center
        font h1
        line-height 50px
        width 700px
        margin auto
        border-bottom 1px solid lightgrey
        padding-bottom 30px
        margin-bottom 30px
    &.section_about, &.section_sources > .inner
      > .copys
        column-count 2
        column-span 2
        column-gap 60px
        > .block
          padding 20px 0
          break-inside avoid-column
          page-break-inside avoid
          display table
          > .circle
            width 10px
            height 10px
            border 1px solid blue
            border-radius 50%
            margin 6px 0 0 0
            float left
          > .title
            color purple
            text-transform uppercase
            margin 0 0 0 30px
            padding 0 0 10px 0
            font c1b
          > .copy
            margin 0 0 0 30px
            color grey
    &.section_sources
      background-color lightgrey
      > .inner
        padding 60px 0
        margin auto
        width 900px
        > .copy:nth-child(1)
          text-align center
          padding 0 0 30px 0
          font h1
        > .copy:nth-child(2)
          text-align center
          color grey
          padding 0 0 60px 0
        > .copys
          padding 60px 0
      > .flow
        max-width 1600px
        margin auto
        height 404px
        background-image url(/about-flow.png)
        background-repeat no-repeat
        background-size cover

@import '~assets/stylus/about-mobile.styl'
