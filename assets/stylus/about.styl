json('../../assets/colors.json')
json('../../assets/fonts.json')
@import '../../assets/stylus/mixins.styl'

.page.page_init > .page_content
  padding 0
  > .section
    &.section_top
      height 100vh
      width 100%
      position relative
      mix-blend-mode multiply
      background-image linear-gradient(157deg, #f6b57c, #ec6999 83%)
      > .inner
        width 100%
        height 100%
        > .copys
          color white
          width 800px
          text-align center
          position absolute
          top 50%
          left 50%
          margin-top -148px
          margin-left -400px
          > .copy:nth-child(1)
            text-transform uppercase
            font c1
            padding 0 0 40px 0
          > .copy:nth-child(2)
            font h2
            padding 0 0 40px 0
          > .copy:nth-child(3)
            padding 0 0 40px 0
          > .button
            font c1sb
            text-transform uppercase
            > a
              background-color rgba(white, 0.1)
              border 1px solid rgba(white, 0.6)
              &:hover
                color black
                background-color rgba(white, 1) 
              transition background-color 0.5s ease 0s, transform 0.2s ease 0s
              &:hover
                transform scale(1.05)

    &.section_about
      margin 60px auto
      width 900px
      > .copy:nth-child(1)
        text-transform uppercase
        color grey
        text-align center
        inViewport(0)
      > .logos
        padding 60px 0
        width 410px
        margin auto
        text-align center
        inViewport(0.1)
        > a > img
          height 60px
      > .copy:nth-child(3)
        text-align center
        font h1
        line-height 50px
        width 700px
        margin auto
        border-bottom 1px solid lightgrey
        padding-bottom 30px
        margin-bottom 30px
        inViewport(0.2)
    &.section_about, &.section_sources > .inner
      > .copys
        column-count 2
        column-span 2
        column-gap 60px
        > .block
          padding 20px 0
          break-inside avoid-column
          page-break-inside avoid
          display table
          inViewport(0.1)
          > .circle
            width 10px
            height 10px
            border 1px solid blue
            border-radius 50%
            margin 6px 0 0 0
            float left
          > .title
            color purple
            text-transform uppercase
            margin 0 0 0 30px
            padding 0 0 10px 0
            font c1b
          > .copy
            margin 0 0 0 30px
            color grey
    &.section_sources
      background-color lightgrey
      > .inner
        padding 60px 0
        margin auto
        width 900px
        > .copy:nth-child(1)
          text-align center
          padding 0 0 30px 0
          font h1
          inViewport(0)
        > .copy:nth-child(2)
          text-align center
          color grey
          padding 0 0 60px 0
          inViewport(0.1)
        > .copys
          padding 60px 0
      > .flow
        max-width 1600px
        margin auto
        height 404px
        background-image url(/about-flow.png)
        background-repeat no-repeat
        background-size cover

@import '~assets/stylus/about-mobile.styl'
