@media all and (min-width: 1px) and (max-width: 1000px)
  .sources
    width auto
    padding 20px

  .page.page_vision > .page_content
    > .section > .inner
      padding 60px 20px !important
      width auto !important
    > .section
      &.section_top
        > .inner
          > .copy
            width 300px
            line-height 55px
          > .highlight
            top 220px
            left 15px
      &.section_together
        > .inner
          > .copy:nth-child(2)
            width auto
          > .blocks
            column-count 1
            column-gap 0px
            > .block
              height auto
              padding  0 0 30px 0
              &:last-child
                padding 0 0 0 0
      &.section_download
        > .inner
          text-align center
          > .copy
            float none
            width auto
            padding 0 20px 60px 20px
            text-align left
          > .cta
            display inline-block
            float none
            margin auto
      &.section_download
        > .inner
          width auto
          padding 60px 20px
      &.section_stakes
        > .inner
          > .copy:nth-child(2)
            width auto
      &.section_chart
        &.section_chart_metros
          height auto
        &.section_chart_incomeafford
          height auto
          > .inner > .copy_legend > .copy:nth-child(2)
            padding 20px 0
          > .inner > .copy_legend > .legend
            padding 0 0 30px 0
        &.section_chart_buildmore
          height auto
          > .inner > .copy_legend > .copy:nth-child(2)
            padding 20px 0
        > .inner
          > .copy_legend
            float none
            width auto
          > .chart_area
            width 100%
            float none
            margin 0

