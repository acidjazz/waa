@keyframes zoom-in
  0%
    opacity 0
    transform scale(0.8)
  100%
    opacity 1
    transform scale(1)

@keyframes zoom-out
  0%
    opacity 1
    transform scale(1)
  100%
    opacity 0
    transform scale(0.95)

@keyframes fade-in
  0%
    opacity 0
  100%
    opacity 1

@keyframes fade-out
  0%
    opacity 1
  100%
    opacity 0

@keyframes slide-in-left
  0%
    opacity 0
    transform translate(20px, 0)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-out-left
  0%
    opacity 1
    transform translate(0, 0)
  100%
    opacity 0
    transform translate(20px, 0)

@keyframes slide-in-right
  0%
    opacity 0
    transform translate(-20px, 0)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-out-right
  0%
    opacity 1
    transform translate(0, 0)
  100%
    opacity 0
    transform translate(-20px, 0)

@keyframes slide-in-right-full
  0%
    opacity 0
    transform translate(-10%, 0)
  100%
    opacity 1
    transform translate(0%, 0)

@keyframes slide-out-right-full
  0%
    opacity 1
    transform translate(0%, 0)
  100%
    opacity 0
    transform translate(-50%, 0)


@keyframes slide-in-left-full
  0%
    opacity 0
    transform translate(10%, 0)
  100%
    opacity 1
    transform translate(0%, 0)

@keyframes slide-out-left-full
  0%
    opacity 1
    transform translate(0%, 0)
  100%
    opacity 0
    transform translate(50%, 0)


@keyframes slide-in-top
  0%
    opacity 0
    transform translate(0, -20px)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-out-top
  0%
    opacity 1
    transform translate(0, 0)
  100%
    opacity 0
    transform translate(0, -20px)

@keyframes slide-in-bottom
  0%
    opacity 0
    transform translate(0, 20px)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-out-bottom
  0%
    opacity 1
    transform translate(0, 0)
  100%
    opacity 0
    transform translate(0, 20px)
