@media all and (min-width: 1px) and (max-width: 1000px)
  #GradientChart
    width 100%
    height 140px
    > .chart
      top 120px
      background none
    > .data
      > .copys
        float none
        width auto
        padding 0 40px 0 20px
        margin 0
        > .copy:nth-child(2)
          width auto
      > .legend
        display none
      > .values
        display none
        right 10px
        margin-top -14vh
        > .value:nth-child(2)
          margin 28vh 0
