@media all and (min-width: 1px) and (max-width: 1000px)
  #GradientChart
    width 100%
    > .chart
      top 120px
      background-size cover
      background-repeat no-repeat
      background-position 100% 0%
    > .data
      > .copys
        float none
        width auto
        padding 0 10px
        margin 0 0 0 10px
        width 80%
        > .copy:nth-child(2)
          width auto
      > .legend
        display none
      > .values
        right 10px
        margin-top -14vh
        > .value:nth-child(2)
          margin 28vh 0
