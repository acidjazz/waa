fullsize()
  top 0
  left 0
  right 0
  bottom 0

onoff()
  &.on
    display block
  &.off
    display none

inViewport(delay)
  opacity 0
  transform translate(0, -20px)
  transition opacity 1s ease-in-out unit(delay, 's'), transform 1s ease-in-out unit(delay, 's')
  &.in-viewport
    opacity 1
    transform translate(0, 0)
  &.above-viewport
    opacity 0
    transform translate(0, -20px)
  &.below-viewport
    opacity 0
    transform translate(0, 20px)

absMiddle(width, height)
  position absolute
  top 50%
  left 50%
  width unit(width, px)
  height unit(height, px)
  margin-top unit(-(height/2), px)
  margin-left unit(-(width/2), px)

