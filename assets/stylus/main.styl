@import mixins
@import keyframes
json('../colors.json')
json('../fonts.json')

body
  // background-color darkblue
  font c1
  margin 0
  padding 0
  -webkit-print-color-adjust exact
.page
  background-color white

.border
  height 5px
  background-color lightgrey
  &.big
    height 30px
  &.small
    height 1px
  &.white
    background-color white
  &.margined
    margin 0 120px

.page_content
  clear both
  padding-top 60px
.button
  display inline-block
  font-size 12px
  > a
    border-radius 3px
    display inline-block
    padding 10px 30px
    background-color blue
    color white
    text-decoration none

.clear
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie

